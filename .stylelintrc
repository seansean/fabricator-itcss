{
    "plugins": [
        "stylelint-order"
    ],
    "rules": {
        "color-no-invalid-hex": true,
        "font-family-name-quotes": "always-where-recommended",

        "function-calc-no-unspaced-operator": true,
        "function-comma-space-after": "always",
        "function-comma-space-before": "never",
        "function-url-quotes": "never",

        "number-leading-zero": "always",
        "number-no-trailing-zeros": true,

        "string-quotes": "single",

        "unit-case": "lower",
        "unit-no-unknown": true,

        "declaration-colon-space-after": "always",
        "declaration-block-no-duplicate-properties": true,
        "order/properties-order": [
            "display", "position","top", "right", "bottom", "left",

            "flex", "flex-basis", "flex-direction", "flex-flow", "flex-grow", "flex-shrink", "flex-wrap", "align-content", "align-items", "align-self", "justify-content", "order",

            "width", "min-width", "max-width",
            "height", "min-height", "max-height",
            "margin", "margin-top", "margin-right", "margin-bottom", "margin-left",
            "padding", "padding-top", "padding-right", "padding-bottom", "padding-left",

            "float",
            "clear",
            "clip",

            "columns", "column-gap", "column-fill", "column-rule", "column-span", "column-count", "column-width",

            "transform", "transform-box", "transform-origin", "transform-style",

            "background", "background-attachment", "background-clip", "background-color", "background-image", "background-position", "background-repeat", "background-size",

            "border", "border-top", "border-right", "border-bottom", "border-left", "border-width", "border-top-width", "border-right-width", "border-bottom-width", "border-left-width",
            "border-style", "border-top-style", "border-right-style", "border-bottom-style", "border-left-style",
            "border-radius", "border-top-left-radius", "border-top-right-radius", "border-bottom-left-radius", "border-bottom-right-radius",
            "border-color", "border-top-color", "border-right-color", "border-bottom-color", "border-left-color",
            "border-collapse", "border-spacing",

            "box-shadow",

            "outline", "outline-color", "outline-offset", "outline-style", "outline-width",

            "color",
            "font", "font-family", "font-size", "font-smoothing", "font-style", "font-variant", "font-weight",
            "letter-spacing",
            "line-height",
            "list-style",

            "text-align", "text-decoration", "text-indent", "text-overflow", "text-rendering", "text-shadow", "text-transform", "text-wrap",

            "white-space", "word-spacing",

            "caption-side",
            "content",
            "counter-increment",
            "counter-reset",
            "cursor",
            "empty-cells",
            "opacity",
            "overflow",

            "quotes",
            "speak",
            "table-layout",
            "vertical-align",
            "visibility",

            "transition", "transition-delay", "transition-duration", "transition-property", "transition-timing-function",
            "z-index"
        ],
        "declaration-block-semicolon-newline-after": "always",

        "block-no-empty": null,
        "block-closing-brace-empty-line-before": "never",

        "block-opening-brace-newline-after": "always",
        "block-closing-brace-newline-before": "always",

        "selector-attribute-quotes": "always",
        "selector-max-id": 0,
        "selector-no-vendor-prefix": true,

        "comment-empty-line-before": [ "always", {
            "ignore": ["after-comment", "stylelint-commands"]
        }],

        "max-empty-lines": 2,

        "indentation": [4, {
            "ignore": ["inside-parens", "value"]
        }]
    }
}
